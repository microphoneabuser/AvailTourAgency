                                        AutomationProperties.IsOffscreenBehavior="Onscreen"
                                        HorizontalAlignment="Left" Width="391" Foreground="#FF3580BF"
                                        VerticalAlignment="Top" Margin="80,5,0,0" Height="31" TextDecorations="UnderLine"
